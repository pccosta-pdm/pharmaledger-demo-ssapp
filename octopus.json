{
  "workDir": ".",
  "dependencies": [
    {
      "name": "Workbox-cli Install (globally)",
      "src": "",
      "description": "the dev dependencies break cardinal build",
      "actions": [
        {
          "type": "execute",
          "cmd": "npm install -g workbox-cli@6.1.5"
        }
      ]
    }
  ],
  "prebuild": [
    {
      "name": "PSK bundles",
      "src": "",
